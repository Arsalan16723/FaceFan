<div class="posts-wrapper">
	<div class="post">
		<div class="post-body">
			<div class="image-wrap">
				<%= form_image_select(@post) %>
				<%= simple_form_for @post, html: {multipart: true} do |f| %>
					<div class="row">
					<%= f.error_notification %>
					</div>
					<div class="container-fluid">
						<div class="form-group text-center">
							<h4>Upload an image <i>(Required)</i></h4>
							<%= f.input :image, label: false, input_html: {onChange: 'loadFile(event)'} %>
						</div>
						<div class="form-group text-center">
							<%= f.input :caption, label: false, placeholder: 'Add your caption' %>
						</div>
						<div class="form-group text-center">
							<%= f.button :submit, class: 'btn1 btn btn-success btn-block' %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>